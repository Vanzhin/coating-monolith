<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Users\Domain\Entity\User" table="user_user">
        <id name="ulid" type="string" length="26">
            <generator strategy="NONE"/>
        </id>
        <embedded name="email" class="App\Users\Domain\Entity\ValueObject\Email" use-column-prefix="false"/>
        <field name="password" type="string" nullable="true"/>
        <field name="roles" type="json">
            <options>
                <option name="default">[]</option>
            </options>
        </field>
        <one-to-many field="channels"
                     target-entity="App\Users\Domain\Entity\Channel"
                     mapped-by="owner">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
        <field name="isActive" column="is_active" type="boolean"/>
    </entity>
</doctrine-mapping>
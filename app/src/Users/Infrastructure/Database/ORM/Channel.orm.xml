<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Users\Domain\Entity\Channel" table="user_channel">
        <id name="id" type="uuid">
            <generator strategy="NONE"/>
        </id>
        <field name="type"
               enum-type="App\Users\Domain\Entity\ChannelType"
               length="100"
        />
        <field name="value"/>
        <many-to-one field="owner" target-entity="App\Users\Domain\Entity\User" inversed-by="channels">
            <join-column referenced-column-name="ulid" nullable="false"/>
        </many-to-one>
        <field name="isVerified" column="is_verified" type="boolean"/>
        <field name="verifiedAt" column="verified_at" type="datetime_immutable"/>
        <embedded name="token" class="App\Users\Domain\Entity\Token" column-prefix="token_"/>
    </entity>
</doctrine-mapping>
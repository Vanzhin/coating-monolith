{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Вход{% endblock %}

{% block body %}
    <div class="container d-flex my-4 justify-content-center ">
        <form method="post" action="{{ path('app_login') }}" class="form-signin m-auto">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% else %}

            {% endif %}
            <h1 class="h3 mb-3 font-weight-normal">Вход</h1>
            <div class="form-floating my-1">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                autocomplete="email" required autofocus placeholder="Укажите почту...">
                <label for="inputEmail">Email</label>
            </div>
            <div class="form-floating my-1">
                <input type="password" name="password" id="inputPassword" class="form-control"
                autocomplete="current-password" required placeholder="Введите пароль...">
                <label for="inputPassword">Пароль</label>
            </div>


            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <div class="d-flex justify-content-between align-items-center">
                <button class="btn btn-lg btn-primary mt-2" type="submit">
                    Вперед
                </button>
                <div class="m-1">
                    Впервые на сайте? <a href="{{ path('app_sign_up') }}">Регистрация</a>
                </div>
                <div class="m-1">
                    Вход по ссылке <a href="{{ path('app_login_link') }}">Перейти</a>
                </div>
            </div>

        </form>

    </div>
{% endblock %}
